<p style="color: green"><%= notice %></p>

<h1>Books</h1>

<div id="books">
  <% @books.each do |book| %>
    <%= render book %>
    <p>
      <%= link_to "Show this book", book %> |
      <%= link_to "Edit", edit_book_path(book) %> | 
      <%= link_to "Delete", book_path(book), method: :delete, data: { confirm: "Are you sure you want to delete this book?" } %>
    </p>
  <% end %>
</div>

<%= link_to "New book", new_book_path %>
